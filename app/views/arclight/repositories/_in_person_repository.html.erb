<div class='al-in-person-repository-name'>
  <% if repository.thumbnail_url %>
    <%= image_tag repository.thumbnail_url, alt: repository.name, class: 'img-fluid' %>
  <% end %>
  <div>
    <!-- replaced arclight A-Z lists with static pages -->
    <%# link_to(repository.name, arclight_engine.repository_path(repository.slug)) %>
    <% if repository.slug == "ua" %>
      <%= link_to(repository.name, "https://archives.albany.edu/web/ua") %>
    <% elsif repository.slug == "ndpa" %>
      <%= link_to(repository.name, "https://archives.albany.edu/browse/91.html") %>
    <% else %>
      <%= link_to(repository.name, "https://archives.albany.edu/browse/"+ repository.slug + ".html") %>
    <% end %>
  </div>
</div>
