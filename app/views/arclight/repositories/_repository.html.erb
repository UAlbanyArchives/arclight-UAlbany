<div class="al-repository">
  <div class="container">
    <div class='row'>
      <div class='col-sm-4 offset-sm-4 col-md-6 offset-md-3 col-lg-4 offset-lg-0 al-repository-thumbnail hidden-md-down'>
      <%= link_to_unless(params[:id] == repository.slug, image_tag(repository.thumbnail_url, alt: repository.name, class: 'img-fluid'), arclight_engine.repository_path(repository.slug)) %>
      
      </div>

      <div class="col-sm-12 col-lg-8 al-repository-information">
        
        <div class='row no-gutters justify-content-md-center'>
            
       
          <div class="col al-repository-description" title="<%= repository.description %>">
            <h2>
              <%= link_to_unless(params[:id] == repository.slug, repository.name, arclight_engine.repository_path(repository.slug)) %>
            </h2>
            <h3 class="h6"><%= repository.tagline %></h3>
            
              <div data-arclight-truncate="true">
                <%= repository.description %>
              </div>
           
          </div>

          <% if on_repositories_index? %>
            <div class='col col-lg-2 col-sm-12 col-12 al-repository-extra hidden-md-down'>
            <%= link_to(t(:'arclight.views.repositories.view_more'), arclight_engine.repository_path(repository.slug), class: 'btn btn-primary') %>
            <div class='al-repository-extra-collection-count'>
                <% unless repository.slug == "sub" %>
                <span class="al-repository-collection-count">
                  <%= t(:'arclight.views.repositories.number_of_collections', count: repository.collection_count) %>
                </span>
                <% end %>
               </div>

         
                 </div>
          <% end %>
     
        </div>
      </div>
    </div>
  </div>
</div>

